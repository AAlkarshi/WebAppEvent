{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1>Se connecter</h1>

{% if error %}
    <div class="flash-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <label for="email">Email :</label>
    <input type="email" id="email" name="mail_user" value="{{ last_email }}" required>

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="password_user" required>

    <button type="submit">Se connecter</button>
</form>
{% endblock %}
