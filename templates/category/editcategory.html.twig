{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<section class="profile-page-container">

    <!-- COLONNE GAUCHE -->
    <div class="profile-left-column">
        <h2>Catégories</h2>
        <h5>Modifier une catégorie existante</h5>
        <div class="contact-info">
            <i class="fa-solid fa-tags"></i>
            <p>Administration</p>
        </div>
    </div>

    <!-- COLONNE DROITE -->
    <div class="profile-right-column">
        <div class="profile-card">
            <h1>Modifier la catégorie</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}
                <div class="form-fields">
                    {{ form_row(form.name_category) }}
                </div>

                <div class="form-actions">
                    <button class="btn-update">Enregistrer</button>
                </div>
            {{ form_end(form) }}

            <div class="profile-actions">
                <a href="{{ path('listCategories') }}" class="logout-btn">
                    Retour à la liste
                </a>
            </div>
        </div>
    </div>

</section>

<style>
/* --- CONTENEUR GLOBAL --- */
.profile-page-container {
    display: flex;
    min-height: 100vh;
    gap: 20px;
    padding: 20px;
    box-sizing: border-box;
}

/* --- COLONNE GAUCHE --- */
.profile-left-column {
    background-color: #005791;
    color: white;
    width: 25%;
    min-height: 100vh;
    padding: 40px 20px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.profile-left-column h2 {
    font-size: 2rem;
}

.profile-left-column h5 {
    font-size: 1.1rem;
    color: #ccc;
}

/* --- COLONNE DROITE --- */
.profile-right-column {
    width: 70%;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* --- CARD --- */
.profile-card {
    background-color: #f9f9f9;
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 30px;
    width: 100%;
    max-width: 450px;
    text-align: center;
}

.profile-card h1 {
    color: #005791;
    margin-bottom: 20px;
}

/* --- FORMULAIRE --- */
.form-fields {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.form-actions {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

.btn-update {
    background-color: #007bff;
    color: white;
    padding: 10px 25px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.btn-update:hover {
    background-color: #0056b3;
}

/* --- ACTIONS --- */
.profile-actions {
    margin-top: 25px;
    display: flex;
    justify-content: center;
}

.logout-btn {
    background-color: #005791;
    color: white;
    padding: 8px 20px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
}

.logout-btn:hover {
    background-color: #003f66;
}

/* --- RESPONSIVE --- */
@media (max-width: 768px) {
    .profile-page-container {
        flex-direction: column;
        align-items: center;
    }

    .profile-left-column {
        display: none;
    }

    .profile-right-column {
        width: 100%;
    }
}
</style>
{% endblock %}
