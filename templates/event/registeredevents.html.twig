{% extends "base.html.twig" %}

{% block title %}Mes √©v√©nements inscrits{% endblock %}

{% block body %}
<section class="events-page-container">

    {% if registrations.items is empty %}
    <!-- EMPTY STATE (comme MyProfile) -->
    <section class="profile-page-container">

        <!-- COLONNE GAUCHE -->
        <div class="profile-left-column">
            <h2>Mes √©v√©nements</h2>
            <h5>Inscriptions</h5>
            <div class="contact-info">
                <i class="fa-solid fa-calendar-xmark"></i>
                <p>Aucun √©v√©nement</p>
            </div>
        </div>

        <!-- COLONNE DROITE -->
        <div class="profile-right-column">
            <div class="profile-card">
                <h1>Aucune inscription</h1>

                <p>
                    Vous n‚Äô√™tes inscrit √† aucun √©v√©nement pour le moment.
                </p>

                <p>
                    D√©couvrez les √©v√©nements disponibles et inscrivez-vous üëá
                </p>

                <div class="form-actions">
                    <a href="{{ path('app_events') }}" class="btn-update">
                        Voir les √©v√©nements
                    </a>
                </div>
            </div>
        </div>

    </section>

    {% else %}
    <!-- GRID DES √âV√âNEMENTS -->
    <section class="events-container">
        <h2>Mes √©v√©nements inscrits</h2>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        <p>{{ registrations.totalItemCount }} √©v√©nement{{ registrations.totalItemCount > 1 ? 's' : '' }} trouv√©{{ registrations.totalItemCount > 1 ? 's' : '' }}.</p>

        <div class="events-grid">
            {% for reg in registrations %}
                <div class="event-card">
                    <div class="event-image-wrapper">
                        {% if reg.event.imageEvent %}
                            <img src="{{ asset('uploads/events/' ~ reg.event.imageEvent) }}" alt="{{ reg.event.titleEvent }}">
                        {% else %}
                            <img src="{{ asset('uploads/events/autre√©v√®nement.jpg') }}" alt="Image par d√©faut">
                        {% endif %}
                    </div>

                    <div class="event-info">
                        <h3>{{ reg.event.titleEvent }}</h3>

                        {% if reg.event.category %}
                            <p><strong>Cat√©gorie :</strong> {{ reg.event.category.nameCategory }}</p>
                        {% endif %}

                        {% if reg.event.address %}
                            <p><strong>Adresse :</strong> {{ reg.event.address.city }}
                                {% if reg.event.address.address %}, {{ reg.event.address.address }}{% endif %}
                            </p>
                        {% endif %}

                        <p><strong>Date :</strong> {{ reg.event.dateTimeEvent|date('d/m/Y H:i') }}</p>

                        {% if reg.event.descriptionEvent %}
                            <p>{{ reg.event.descriptionEvent }}</p>
                        {% endif %}

                        <p><strong>Participants :</strong>
                            {{ reg.event.nbxParticipant }} /
                            {{ reg.event.nbxParticipantMax is not empty ? reg.event.nbxParticipantMax : 'Illimit√©' }}
                        </p>

                        <div class="event-actions">
                            {% if reg.event.createdBy == app.user %}
                                <a href="{{ path('view_myevent', {id: reg.event.id}) }}" class="btn-submit">Voir</a>
                            {% endif %}
                            <a href="{{ path('event_unregister', {id: reg.event.id}) }}" class="btn-submit btn-danger"
                               onclick="return confirm('Voulez-vous vraiment vous d√©sinscrire de cet √©v√©nement ?');">
                                Se d√©sinscrire
                            </a>
                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>

        {% if registrations.getTotalItemCount > 3 %}
            <div class="pagination">
                {{ knp_pagination_render(registrations) }}
            </div>
        {% endif %}
    </section>
    {% endif %}

</section>

<style>
 
.events-container {
    padding: 20px;
    font-family: Quicksand;
    font-weight: bold;
}

.events-container h2 {
    text-align: center;
    margin-bottom: 20px;
}

/* Grille responsive */
.events-grid {
    display: flex;
    flex-direction: column;
    gap: 30px;
}

/* Carte */
.event-card {
    display: flex;
    background-color: #f8f8f8;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

.event-image-wrapper {
    width: 250px;
    flex-shrink: 0;
    overflow: hidden;
    
}

.event-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.event-info {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.event-info h3 {
    margin: 0;
    color: #005791;
}

.event-actions {
    margin-top: 10px;
    display: flex;
    gap: 10px;
}

.btn-submit {
    background-color: #005791;
    color: white;
    padding: 8px 15px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: bold;
}

.btn-submit:hover {
    background-color: #003f66;
}

.btn-danger {
    background-color: #e74c3c;
}

.btn-danger:hover {
    background-color: #c0392b;
}

.pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 40px;
    width: 100%;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    color: black;
    border: 1px solid #005791;
    gap: 5px;
    margin-top: 20px;
}

 
.profile-page-container {
    display: flex;
    min-height: 60vh;
    gap: 20px;
    padding: 20px;
    box-sizing: border-box;
}

.profile-left-column {
    background-color: #005791;
    color: white;
    width: 25%;
    min-height: 200px;
    padding: 40px 20px;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.profile-left-column h2 {
    font-size: 2rem;
}

.profile-left-column h5 {
    font-size: 1.1rem;
    color: #ccc;
}

.contact-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
}

.profile-right-column {
    width: 70%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.profile-card {
    background-color: #f9f9f9;
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    padding: 30px;
    width: 100%;
    max-width: 500px;
    text-align: center;
}

.profile-card h1 {
    color: #005791;
    margin-bottom: 20px;
}

.form-actions {
    display: flex;
    justify-content: center;
    margin-top: 15px;
}

.btn-update {
    background-color: #007bff;
    color: white;
    padding: 10px 25px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.btn-update:hover {
    background-color: #0056b3;
}


/* RESPONSIVE tablete */

@media (max-width: 768px) {
    .event-card {
        flex-direction: column;
    }

    .event-image-wrapper {
        width: 100%;
        height: 200px;
    }

    .profile-page-container {
        flex-direction: column;
    }

    .profile-left-column {
        display: none;
    }

    .profile-right-column {
        width: 100%;
    }
}
</style>
{% endblock %}
