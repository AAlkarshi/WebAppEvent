{% extends 'base.html.twig' %}
{% block title %}Créer un événement{% endblock %}
{% block body %}
<section class="event-container">
    <!-- COLONNE GAUCHE -->
    <div class="ColonneGauche">
        <h2>Créer un nouvel événement</h2>
        <h5>Remplissez le formulaire pour organiser votre événement</h5>
        <div class="contact-info">
            <i class="fa-solid fa-envelope"></i>
            <p>alkarshi.abdullrahman@gmail.com</p>
        </div>
    </div>

    <!-- COLONNE DROITE -->
    <div class="event-grid">
        <div class="profile-container">
            <h1>Nouvel événement</h1>
            {% for message in app.flashes('success') %}
                <div class="flash-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="flash-error">{{ message }}</div>
            {% endfor %}

            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data', novalidate: 'novalidate',  'data-turbo': 'false', 'style':'display:flex;flex-direction:column;gap:15px;width:100%;'}}) }}
            {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.image_event) }}
                    {{ form_widget(form.image_event) }}
                    {{ form_errors(form.image_event) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.title_event) }}
                    {{ form_widget(form.title_event) }}
                    {{ form_errors(form.title_event) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description_event) }}
                    {{ form_widget(form.description_event) }}
                    {{ form_errors(form.description_event) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.dateTime_event) }}
                    {{ form_widget(form.dateTime_event) }}
                    {{ form_errors(form.dateTime_event) }}
                </div> 
                <div class="form-group">
                    {{ form_label(form.duration_event) }}
                    {{ form_widget(form.duration_event) }}
                    {{ form_errors(form.duration_event) }}
                </div>
                <div class="form-group">{{ form_label(form.nbx_participant) }}
                    {{ form_widget(form.nbx_participant) }}
                    {{ form_errors(form.nbx_participant) }}
                </div>
                <div class="form-group"> {{ form_label(form.nbx_participant_max) }}
                    {{ form_widget(form.nbx_participant_max) }}
                    {{ form_errors(form.nbx_participant_max) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    {{ form_errors(form.category) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.address) }}
                    {{ form_row(form.address) }}
                </div>
                <div class="form-actions" style="display: flex; justify-content: center; margin-top: 1.5rem;">
                    <button type="submit" class="btn-submit">Créer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>


<style>
/* --- CONTENEUR GLOBAL --- */
.event-container {
    display: flex;
    justify-content: space-between;
    align-items: stretch;
    width: 100%;
    min-height: 100vh;
    padding: 20px;
    box-sizing: border-box;
}

/* --- COLONNE GAUCHE --- */
.ColonneGauche {
    background-color: #005791;
    width: 40%;
    padding: 50px 30px;
    border-radius: 10px;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 15px;
}

.ColonneGauche h2 {
    font-size: 2.2rem;
    margin-bottom: 10px;
}

.ColonneGauche h5 {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 20px;
}

.contact-info {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1rem;
}

/* --- COLONNE DROITE --- */
.event-grid {
    width: 60%;
    display: flex;
    justify-content: center;
    align-items: center;
}


/* --- MESSAGES D'ERREUR DE FORMULAIRE --- */
.form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

/* Erreurs Symfony */
.invalid-feedback,
.form-error-message,
ul.form-error-list {
    display: block;
    color: #d32f2f;
    background-color: #ffebee;
    padding: 12px 15px;
    border-radius: 6px;
    border-left: 4px solid #d32f2f;
    margin-top: 5px;
    font-size: 0.95rem;
    font-weight: 500;
    list-style: none;
}

ul.form-error-list {
    padding-left: 15px;
}

ul.form-error-list li {
    margin: 5px 0;
}

/* Style des champs en erreur */
.form-control.is-invalid,
input.is-invalid,
select.is-invalid,
textarea.is-invalid {
    border-color: #d32f2f;
    background-color: #fff5f5;
}







/* --- FORMULAIRE --- */
.profile-container {
    width: 100%;
    max-width: 450px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 25px;
}

.profile-container h1 {
    font-size: 2rem;
    margin-bottom: 20px;
}

/* --- CHAMPS DE FORMULAIRE --- */
.profile-container form label {
    font-weight: bold;
    font-size: 1rem;
}

.profile-container form input,
.profile-container form textarea,
.profile-container form select {
    padding: 10px 15px;
    font-size: 1rem;
    border-radius: 6px;
    border: 1px solid #ccc;
    width: 100%;
    box-sizing: border-box;
}

/* --- BOUTON --- */
.btn-submit {
    background-color: #005791;
    color: white;
    padding: 12px 25px;
    font-size: 1.1rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.btn-submit:hover {
    background-color: #00406a;
}

/* --- MESSAGES FLASH --- */
.flash-success {
    color: green;
    font-weight: bold;
    text-align: center;
}

.flash-error {
    color: red;
    font-weight: bold;
    text-align: center;
}

/* --- RESPONSIVE --- */
@media (max-width: 768px) {
    .event-container {
        flex-direction: column;
        height: auto;
        justify-content: center;
    }
    .ColonneGauche, .event-grid {
        width: 100%;
        margin-bottom: 20px;
    }
    .profile-container h1 {
        font-size: 1.8rem;
    }
    .ColonneGauche h2 {
        font-size: 1.8rem;
    }
}
</style>
{% endblock %}
