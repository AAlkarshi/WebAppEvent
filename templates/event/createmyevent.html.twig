{% extends 'base.html.twig' %}

{% block title %}Créer un événement{% endblock %}

{% block body %}
<section class="create-event">
    <h1>Créer un nouvel événement</h1>

    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}

<!-- Message d’erreur visuel dans le formulaire -->
    {% if form.dateTime_event.vars.errors|length > 0 %}
    <div style="color: red; font-style: italic; margin-top: 5px;">
        {{ form_errors(form.dateTime_event) }}
    </div>
{% endif %}


    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn">Créer</button>
    {{ form_end(form) }}
</section>

<style>
.create-event {
    width: 50%;
    margin: 40px auto;
    background: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
}
.btn {
    background: #005791;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}
</style>
{% endblock %}
