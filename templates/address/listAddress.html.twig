{# templates/address/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des adresses{% endblock %}

{% block body %}
<h1>Liste des adresses</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Adresse</th>
            <th>Ville</th>
            <th>CP</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.address }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.cp }}</td>
                <td>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">Modifier</a>
                    <a href="{{ path('address_delete', {'id': address.id}) }}" onclick="return confirm('Supprimer cette adresse ?');">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune adresse trouvÃ©e</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('address_new') }}" class="btn btn-primary">Ajouter une adresse</a>
{% endblock %}
